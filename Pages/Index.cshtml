@page
@model IBAS_kantine.Pages.IndexModel

@{
    ViewData["Title"] = "Menu ";
}

<div class="text-center">
    <h1 class="display-4">Kantinens Menu </h1>
</div>

<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
<h1>Menu for Næste Uge</h1>
<table>
    <thead>
    <tr>
        <th>Uge</th>
        <th>Dag</th>
        <th>Varm Ret</th>
        <th>Kold Ret</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.MenuItems)
    {
        <tr>
            <td>@item.Uge</td>
            <td>@item.Dag</td>
            <td>@item.VarmRet</td>
            <td>@item.KoldRet</td>
        </tr>
    }
    </tbody>
</table>
</body>
</html>